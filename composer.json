{
    "name": "temant-framework/http-core",
    "description": "PSR-7 & PSR-17 Implementation",
    "type": "library",
    "require": {
        "php": "^8.4",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^2.1",
        "http-interop/http-factory-tests": "^2.0"
    },
    "scripts": {
        "analyse": "./vendor/bin/phpstan",
        "test": "./vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "Temant\\HttpCore\\": "Src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Temant\\HttpCore\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT"
}
